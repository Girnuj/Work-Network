@model IEnumerable<WorkNetwork.Models.Empresa>

@{
    ViewData["Title"] = "Empresa";
}

<h1>Empresa</h1>

<button type="button" class='btn btn-primary mb-3' onclick='AbrirModal(modalCrearEmpresa)'>Crear Empresas</button>

<table class='table'>
    <thead>
        <tr>
            <th>
                Empresa
            </th>
            <th>
                CUIT
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody id='tbody-empresa'></tbody>
</table>

<!-- modal -->
<div class="modal fade" id="modalCrearEmpresa" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-lg modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal-">Crear Empresa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick='VaciarFormulario()'></button>
            </div>
            <div class="modal-body">
                <div>
                    @*<div class="alert alert-danger "id='alertRubro'>El campo descripcion no puede estar vacio</div> *@
                    <input type="hidden" id='idEmpresa' />
                    <input placeholder="Ingrese una empresa" type="text" id="nombreEmpresa" class="form-control mb-3" />
                    <input placeholder="CUIT" type="number" id="cuitEmpresa" class='form-control mb-3' />
                    <input placeholder="Ingrese un correo" type="email" id="correoEmpresa" class='form-control mb-3' />
                    <div>
                        <label class="control-label"><b> Paises: </b></label>
                        @Html.DropDownList("PaisID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <div>
                        <label class="control-label"><b> Provincias: </b></label>
                        @Html.DropDownList("ProvinciaID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <div>
                        <label class="control-label"><b> Localidades: </b></label>
                        @Html.DropDownList("LocalidadID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <input placeholder='Ingrese su numero de telefono' type='tel' id="telefono1Empresa" class='form-control mb-3' />
                    <input placeholder='Ingrese un numero de telefono alternativo' type='tel' id="telefono2Empresa" class='form-control mb-3' />
                    <div>
                        <label class="control-label"><b> Rubros: </b></label>
                        @Html.DropDownList("RubroID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <div>
                        <label class="control-label"><b> Tipo de empresa: </b></label>
                        <select id='tipoEmpresa' class="form-control mb-3">
                            <option>Seleccione un campo</option>
                            <option value=0>Unipersonal</option>
                            <option value=1>Empresa</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="fotoPerfilEmpresa" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" onclick='GuardarEmpresa()'>Crear</button>
                <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src='~/js/Empresas.js'></script>
    <script>
        window.onload = CompletarTablaEmpresas();
    </script>
}
