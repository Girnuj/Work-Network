@model IEnumerable<WorkNetwork.Models.Rubro>

@{
    ViewData["Title"] = "Rubro";
}
<h1>Rubro</h1>

<button type="button" class="btn btn-primary mb-3" onclick="AbrirModal(modalCrearRubro)">Crear Rubro</button>

<table class="table ">
    <thead class="table-dark">
        <tr>
            <th>
                Rurbo
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody id="tbody-rubros">
    </tbody>
</table>



<!-- Modal -->
<div class="modal fade" id="modalCrearRubro" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal-rubro"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="alert alert-danger " id='alertRubro'>El campo descripcion no puede estar vacio</div>
                    <input type="hidden" id='idRubro' />
                    <input placeholder="Ingrese un rubro" type="text" id="nombreRubro" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" onclick='GuardarRubro()'>Crear</button>
                <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src='~/js/Rubros.js'></script>
    <script>
        window.onload = CompletarTablaRubro()
    </script>
}
