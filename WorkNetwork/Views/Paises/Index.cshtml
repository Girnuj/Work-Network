@model IEnumerable<WorkNetwork.Models.Pais>

@{
    ViewData["Title"] = "Pais";
}

<h1>Pais</h1>

<button type="button" class='btn btn-primary mb-3' onclick='AbrirModal(modalCrearPais)'>Crear Pais</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePais)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody id='tbody-paises'>
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalCrearPais" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal-">Crear pais</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    @*<div class="alert alert-danger "id='alertRubro'>El campo descripcion no puede estar vacio</div> *@
                    <input type="hidden" id='idPais' />
                    <input placeholder="Ingrese un pais" type="text" id="nombrePais" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" onclick='GuardarPais()'>Crear</button>
                <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src='~/js/Paises.js'></script>
    <script>
        window.onload = CompletarTablaPaises();
    </script>
}
