@model IEnumerable<WorkNetwork.Models.Vacante>

@{
    ViewData["Title"] = "Vacantes";
}
<h1>Vacantes</h1>

<button type="button" class='btn btn-primary mb-3' onclick='AbrirModal(modalCrearVacante)'>Crear Vacante</button>

<table class='table'>
    <thead>
        <tr>
            <th>
               Vacante 
            </th>
            <th>
               Titulo 
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody id='tbody-vacante'></tbody>
</table>

<!-- modal -->
<div class="modal fade" id="modalCrearVacante" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-lg modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal-">Crear Vacante</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick='VaciarFormulario()'></button>
            </div>
            <div class="modal-body">
                <div>
                    @*<div class="alert alert-danger "id='alertRubro'>El campo descripcion no puede estar vacio</div> *@
                    <input type="hidden" id='idVacante' />
                    <input type="hidden" id='idEmpresa' />
                    <input placeholder="Ingrese un titulo" type="text" id="tituloVacante" class="form-control mb-3" />
                    <input placeholder="Ingrese una descripcion" type="text" id="descripcionVacante" class="form-control mb-3" />
                    <input placeholder="Experiencia requerida" type="number" id="expRequeridaVacante" class='form-control mb-3' />
                    <div>
                        <label class="control-label"><b> Paises: </b></label>
                        @Html.DropDownList("PaisID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <div>
                        <label class="control-label"><b> Provincias: </b></label>
                        @Html.DropDownList("ProvinciaID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <div>
                        <label class="control-label"><b> Localidades: </b></label>
                        @Html.DropDownList("LocalidadID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>
                    <input type="datetime"  id="fechaFinalizacionVacante">
                    <input placeholder='Ingrese que idioma es requerido' type='tex' id="idiomaVacante" class='form-control mb-3' />
                    <div>
                        <label class="control-label"><b> Disponibilidad horaria: </b></label>
                        <select id='disponibilidadHoraria' class="form-control mb-3">
                            <option>Seleccione un campo</option>
                            <option value=0>Fulltime</option>
                            <option value=1>Partime</option>
                        </select>
                    </div>
                    <div>
                        <label class="control-label"><b>Modalidad: </b></label>
                        <select id='modalidadVacante' class="form-control mb-3">
                            <option>Seleccione un campo</option>
                            <option value=0>Presencial</option>
                            <option value=1>Semi-presencial</option>
                            <option value=2>Remoto</option>
                        </select>
                    </div>
@*                    <div>
                        <label class="control-label"><b> Rubros: </b></label>
                        @Html.DropDownList("RubroID", null, htmlAttributes: new {@class = "form-control mb-3"})
                    </div>*@
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="imagenVacante" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info" onclick='GuardarVacante()'>Crear</button>
                <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Vacantes.js"></script>
}

