@{
    ViewData["Title"] = "Inicio";
}



<div class="projects-section">
    <div class="projects-section-header">
        <p>Ofertas</p>
        <p class="time">Junio, 23</p>
    </div>
    <div class="projects-section-line">
        <div class="projects-status">
            <div class="item-status">
                <span class="status-number">45</span>
                <span class="status-type">En Progreso</span>
            </div>
            <div class="item-status">
                <span class="status-number">24</span>
                <span class="status-type">Finalizadas</span>
            </div>
            <div class="item-status">
                <span class="status-number">62</span>
                <span class="status-type">Vacantes Totales</span>
            </div>
        </div>
    </div>

    @*CARDS DE VACANTES*@
    <div class="project-boxes jsGridView" id="cardVacantes">
    </div>
</div>

@* MODAL PARA POSTULARSE *@
<div class="modal fade" id="modalPostularVacante" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Postularse a vacante</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h1 id="tituloDeVacante"></h1>
        <div class="alert alert-danger visually-hidden" id='alertPersonaVacante'></div>
        <input type="hidden" id='vacanteID' />
        <label for="descripccionVacante">¿Porque se quiere postular a esta vacante?</label>
        <input placeholder="Ingrese una descripcion" type="text" id="descripcionVacante" class="form-control" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-info" onclick='pustularVacante()'>Postularse</button>
        <button type="button" class="btn btn-outline-danger" onclick='' data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts{
<script src="~/js/Vacantes.js"></script>
<script>
    window.onload = MostrarVacantes();
</script>
}