@model IEnumerable<WorkNetwork.Models.Provincia>

@{
    ViewData["Title"] = "Provincia";
}

<h1>Provincias</h1>

<button type="button" class='btn btn-primary mb-3' onclick='AbrirModal(modalCrearProvincia)'>Crear Provincia</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreProvincia)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody id='tbody-provincias'>

    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalCrearProvincia" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titulo-modal-provincia">Crear provincia</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <div>
            @*<div class="alert alert-danger "id='alertRubro'>El campo descripcion no puede estar vacio</div> *@
            <input type= "hidden" id='idProvincia'/>
            <input placeholder="Ingrese la Provincia" type="text" id="nombreProvincia" class="form-control"/>
            
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-info" onclick='GuardarProvincia()'>Crear</button>
        <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
<script src="~/js/Provincias.js"></script>
<script>
window.onload = CompletarTablaProvincias();
</script>
}

